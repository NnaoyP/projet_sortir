{% extends 'base.html.twig' %}

{% block title %}Sortie - D√©tails{% endblock %}
{% block pageTitle %}D√©tail de la sortie{% endblock %}

{% block main %}
    <div class="ui four wide column left aligned relaxed list">
        <div class="item">
            <i class="pencil alternate icon"></i>
            <div class="content">
                <div class="header">Nom de la sortie</div>
                {{ trip.name }}
            </div>
        </div>
        <div class="item">
            <i class="building icon"></i>
            <div class="content">
                <div class="header">Ville organisatrice</div>
                {{ trip.participantArea.name }}
            </div>
        </div>
        <div class="item">
            <i class="hand lizard outline icon"></i>
            <div class="content">
                <div class="header">Nombre de places</div>
                {{ trip.maxRegistrationNumber - trip.participants|length }}/{{ trip.maxRegistrationNumber }}
            </div>
        </div>
        <div class="item">
            <i class="calendar times outline icon"></i>
            <div class="content">
                <div class="header">Date de fin d'inscription</div>
                {{ trip.deadlineDate|date('d/m/Y H:i') }}
            </div>
        </div>
        <div class="item">
            <i class="calendar alternate outline icon"></i>
            <div class="content">
                <div class="header">Date de la sortie</div>
                {{ trip.startDate|date('d/m/Y H:i') }}
            </div>
        </div>
        <div class="item">
            <i class="hourglass half icon"></i>
            <div class="content">
                <div class="header">Dur√©e de la sortie</div>
                {{ trip.duration }} Minutes
            </div>
        </div>
        <div class="item">
            <i class="map marker alternate icon"></i>
            <div class="content">
                <div class="header">Lieu de la sortie</div>
                {{ trip.place.fullName }}
            </div>
        </div>
        <div class="item">
            <i class="map signs icon"></i>
            <div class="content">
                <div class="header">Adresse</div>
                {{ trip.place.street }}
            </div>
        </div>
        <div class="item">
            <i class="building icon"></i>
            <div class="content">
                <div class="header">Ville</div>
                {{ trip.place.city.name }}&nbsp;({{ trip.place.city.zipCode }})
            </div>
        </div>
        <div class="item">
            <i class="info icon"></i>
            <div class="content">
                <div class="header">Description</div>
                {{ trip.description }}
            </div>
        </div>
    </div>

    <div class="ui six wide column left aligned divided list segment">
        <h2 class="ui header">
            <i class="users icon"></i>
            <div class="content">
                Participants
            </div>
        </h2>
        {% for participant in trip.participants %}
        <div class="item">
            <img class="ui avatar image"
                 src="/assets/images/square-image.png"
                 alt="üòâ"
                 onload="this.src = getUserImage('{{ participant.username }}', [0, 0, 0, 0], true); this.onload = null"/>
            <div class="content">
                <a class="header" href="/profile/detail/{{ participant.id }}">{{ participant.firstName }}&nbsp;{{ participant.lastName }}</a>
                <div class="description"><b>{{ participant == trip.organizer ? "Organise la sortie" : 'Participe √† la sortie' }}.</b></div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}

